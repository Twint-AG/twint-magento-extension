<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">sales_order_view_pairing_grid.sales_order_view_pairing_grid_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>sales_order_pairing_columns</spinner>
        <deps>
            <dep>sales_order_view_pairing_grid.sales_order_view_pairing_grid_data_source</dep>
        </deps>
    </settings>
    <dataSource name="sales_order_view_pairing_grid_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <filterUrlParams>
                <param name="order_id">*</param>
            </filterUrlParams>
            <updateUrl path="mui/index/render"/>
            <storageConfig>
                <param name="cacheRequests" xsi:type="boolean">false</param>
                <param name="indexField" xsi:type="string">id</param>
            </storageConfig>
        </settings>
        <aclResource>Magento_Sales::sales_order</aclResource>
        <dataProvider class="Twint\Magento\Provider\Data\PairingGridDataProvider" name="sales_order_view_pairing_grid_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_bottom">
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="sales_order_pairing_columns">
        <settings>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">sales_order_view_pairing_grid.sales_order_view_pairing_grid.sales_order_pairing_columns.actions</item>
                    <item name="target" xsi:type="string">applyAction</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">view</item>
                        <item name="1" xsi:type="string">${ $.$data.rowIndex }</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <column name="id">
            <settings>
                <filter>text</filter>
                <label translate="true">ID</label>
                <sorting>desc</sorting>
            </settings>
        </column>
        <column name="token">
            <settings>
                <filter>text</filter>
                <label translate="true">Token</label>
            </settings>
        </column>

        <column name="amount" class="Magento\Sales\Ui\Component\Listing\Column\Price">
            <settings>
                <label translate="true">Amount</label>
            </settings>
        </column>

        <column name="status">
            <settings>
                <filter>text</filter>
                <label translate="true">Status</label>
            </settings>
        </column>

        <column name="pairing_status">
            <settings>
                <filter>text</filter>
                <label translate="true">Pairing Status</label>
            </settings>
        </column>

        <column name="transaction_status">
            <settings>
                <filter>text</filter>
                <label translate="true">Transaction Status</label>
            </settings>
        </column>

        <column name="created_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <dataType>date</dataType>
                <label translate="true">Transaction Date</label>
            </settings>
        </column>

        <actionsColumn name="actions" class="Twint\Magento\Block\Adminhtml\Listing\ViewAction">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="viewUrlPath" xsi:type="string">twint/pairing/view</item>
                    <item name="urlEntityParamName" xsi:type="string">id</item>
                    <item name="text" xsi:type="string">History</item>
                </item>
            </argument>
            <settings>
                <indexField>id</indexField>
                <label translate="true">Actions</label>
            </settings>
        </actionsColumn>
    </columns>
</listing>
