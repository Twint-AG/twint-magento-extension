<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pairing_grid.pairing_grid_data_source</item>
        </item>
    </argument>
    <settings>
        <deps>
            <dep>pairing_grid.pairing_grid_data_source</dep>
        </deps>
    </settings>
    <dataSource name="pairing_grid_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <filterUrlParams>
                <param name="order_id">*</param>
            </filterUrlParams>
            <updateUrl path="mui/index/render"/>
            <storageConfig>
                <param name="cacheRequests" xsi:type="boolean">false</param>
                <param name="indexField" xsi:type="string">id</param>
            </storageConfig>
        </settings>
        <aclResource>Magento_Sales::sales_order</aclResource>
        <dataProvider class="Twint\Magento\Provider\Data\PairingHistoryDataProvider" name="pairing_grid_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <columns name="sales_order_pairing_columns">
        <column name="parent_id">
            <settings>
                <label translate="true">Pairing ID</label>
                <sortable>false</sortable>
            </settings>
        </column>

        <column name="order_id">
            <settings>
                <label translate="true">Order</label>
            </settings>
        </column>

        <column name="token">
            <settings>
                <filter>text</filter>
                <label translate="true">Token</label>
            </settings>
        </column>

        <column name="amount" class="Magento\Sales\Ui\Component\Listing\Column\Price">
            <settings>
                <label translate="true">Amount</label>
            </settings>
        </column>

        <column name="status">
            <settings>
                <filter>text</filter>
                <label translate="true">Status</label>
            </settings>
        </column>

        <column name="pairing_status">
            <settings>
                <filter>text</filter>
                <label translate="true">Pairing Status</label>
            </settings>
        </column>

        <column name="transaction_status">
            <settings>
                <filter>text</filter>
                <label translate="true">Transaction Status</label>
            </settings>
        </column>

        <column name="shipping_id">
            <settings>
                <label translate="true">Shipping</label>
            </settings>
        </column>

        <column name="customer" class="Twint\Magento\Block\Adminhtml\Listing\CustomAction">
            <settings>
                <label translate="true">Customer Data</label>
            </settings>
        </column>

        <column name="created_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <dataType>date</dataType>
                <label translate="true">Transaction Date</label>
            </settings>
        </column>

        <actionsColumn name="actions" class="Twint\Magento\Block\Adminhtml\Listing\ViewAction">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="viewUrlPath" xsi:type="string">twint/request/view</item>
                    <item name="text" xsi:type="string">Details</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Actions</label>
            </settings>
        </actionsColumn>
    </columns>
</listing>
