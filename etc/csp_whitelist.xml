<?xml version = "1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="cdn_cloudflare" type="host">cdnjs.cloudflare.com</value>
                <value id="android_payment" type="host">payment</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="intent" type="host">intent://payment</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
